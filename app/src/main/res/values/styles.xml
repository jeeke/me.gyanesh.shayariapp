<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.AppTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
<!--        <item name="android:windowAnimationStyle">@style/Animation.AppTheme.BottomSheet.Modal</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.AppTheme.BottomSheet.Modal</item>
        <item name="colorSurface">@color/color_background</item>
    </style>

    <style name="tabTitleAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="toolBarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="backgroundTint">@color/color_surface</item>
        <item name="titleTextColor">@color/color_on_background</item>
    </style>

    <style name="fabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/color_background</item>
        <item name="tint">@color/color_primary</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.AppTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>
</resources>
